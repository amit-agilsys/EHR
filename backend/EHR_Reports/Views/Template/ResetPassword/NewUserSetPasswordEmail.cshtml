@model EHR_Reports.DTOs.Account.ResetPasswordEmailDto;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Set Your Password</title>
    <style>
        body {
            font-family: system-ui;
        }
    </style>
</head>

<body>

    <div style="border-radius: 12px; padding: 30px; background:#fff; border-right:1px solid #00495273; border-left:1px solid #00495273; border-top: 4px solid #00495273; border-bottom: 4px solid #00495273; max-width: 415px; margin: 0 auto;">
        <div>
            <img src="@Model.Logo" style="max-width:130px; margin: 0 auto; display: block;">

            <h3 style="font-size: 28px; text-align: center;">Set Your Password</h3>

            <div style="font-size: 16px; margin-top: 20px; font-family: Arial, sans-serif; color: #333;">
                Dear <strong>@Model.Name</strong>,
            </div>

            <div style="margin-top: 10px;">
                <span style="line-height: 20px; font-size: 14px;">
                    Your account has been successfully created. To activate your account and access our services, please set a password by clicking the button below:
                </span>
            </div>

            <div style="text-align: center; margin-top: 20px;">
                <a href="@Model.CallbackUrl"
                   style="cursor: pointer; background: #004952; border-radius: 8px; padding: 8px 30px; font-size: 14px; border:1px solid #004952; color: #fff; text-decoration: none; display: inline-block;">
                    Set Password
                </a>
            </div>

            <div style="margin-top: 16px; padding: 12px 16px; border: 1px solid #e0e0e0; background-color: #ffffff; border-radius: 6px; font-size: 14px; font-family: Arial, sans-serif; color: #333;">
                <strong>Note:</strong> This password setup link is valid for <strong>2 hours</strong>.
                After that, it will expire automatically for security reasons. If it expires, you can request a new link from the login page.
            </div>

            <div style="margin-top: 10px;">
                <span style="line-height: 20px; font-size: 14px;">
                    If you did not expect this email, please ignore it or contact our support team for assistance.
                </span>
            </div>

            <div style="margin-top: 30px; font-size: 15px; color: #333; font-family: Arial, sans-serif;">
                Thank you,<br>
                — The <strong style="color: #004952;">EHR Reports</strong> Team
            </div>
        </div>
    </div>


</body>

</html>